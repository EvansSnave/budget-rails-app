<div class="bg-gray-100 min-h-screen flex items-center justify-center">
  <div class="bg-white p-6 rounded-lg shadow-lg max-w-md w-full">
    <h2 class="text-2xl font-semibold mb-6 text-center">Change your password</h2>
    
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'space-y-4' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.label :password, "New password", class: 'block text-sm font-medium text-gray-600' %>
        <% if @minimum_password_length %>
          <em class="text-xs text-gray-500 block mb-2">( <%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'p-2 w-full border rounded-md' %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "Confirm new password", class: 'block text-sm font-medium text-gray-600' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'mt-1 p-2 w-full border rounded-md' %>
      </div>

      <div class="actions mt-6">
        <%= f.submit "Change my password", class: 'w-full p-2 text-center bg-blue-600 text-white rounded-md hover:bg-blue-700' %>
      </div>
    <% end %>
    
    <div class="mt-4 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
