<% content_for :title, "BGapp | Categories" %>
<div class="bg-gray-100 min-h-screen p-1">
  <div class="bg-white p-6 rounded-lg shadow-lg">

    <% @categories.each do |category| %>
      <%= link_to category_path(category) do %>
        <div class="flex justify-between items-center border-b pb-4 mb-4">
        <div style="font-weight: 300;">
          <i class="material-icons"><%= category.icon %></i>
          <span style="color: #d3d3d3;"><%= category.name %></span>
        </div>
            <span style="font-weight: 700;">$<%= @total_amounts[category.id] || 0 %></span>
        </div>
        
      <% end %>
    <% end %>

  </div>
</div>
<%= link_to "Add a new category", new_category_path, class: "block w-full p-2 text-center text-white rounded-md hover:bg-green-700 mt-4", style: "background-color: #5fb523;" %>
<%= link_to "Log out", logout_path, method: :destroy, class: "block w-full text-center text-white rounded py-2", style: 'background-color: #3778c2;', onmouseover: "this.style.backgroundColor='#3b82f6'", onmouseout: "this.style.backgroundColor='#3778c2'" %>
